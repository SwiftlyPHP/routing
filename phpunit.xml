<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="vendor/autoload.php"
    beStrictAboutCoversAnnotation="true"
    colors="true"
    cacheResult="false"
    testdox="true"
    noInteraction="true">
    <testsuites>
        <testsuite name="unit">
            <directory suffix=".php">tests</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <report>
            <html outputDirectory="reports"/>
        </report>
    </coverage>
</phpunit>
